<section class="w-full mx-auto bg-nordic-gray-light flex pt-12 md:pt-0 md:items-center bg-cover bg-right" style="max-width:1600px; height: 32rem; background-image: url(/assets/main.png) ">
  <div class="container mx-auto">
    <div class="flex flex-col w-full lg:w-1/2 justify-center items-start  px-6 tracking-wide">
      <h1 class="text-white text-2xl my-4">Модерно шоп. Најквалитетен избор на разни принтани производи...</h1>
    </div>
  </div>
</section>
<section class="bg-white flex pt-12 md:pt-0 items-center">
  <div class="container mx-auto flex items-center flex-wrap pt-4 pb-12">
    <nav id="store" class="w-full z-30 top-0 px-6 py-1">
      <div class="w-full container mx-auto flex flex-wrap items-center justify-between mt-0  py-3">
        <a class="uppercase tracking-wide no-underline hover:no-underline font-bold text-gray-800 text-xl " href="#">
          Категории
        </a>
      </div>
    </nav>
    <% @categories.each do |category| %>
      <%= link_to category_path(category) do %>
        <div class="w-full md:w-1/3 xl:w-1/4 p-3 flex flex-col">
            <div style="padding-top: 0.1em; padding-bottom: 0.1rem" class="text-sm px-3 text-center bg-gray-200 text-gray-800 rounded-full"><%= category.name %></div>
          <div class="pt-3 flex items-center justify-between">
         
          <%= image_tag category.image, class:"hover:grow hover:shadow-lg mt-3" %>
          <a href="#">
          </a>
        </div>
        </div>
      <% end %>
    <% end %>
  </section>

 
