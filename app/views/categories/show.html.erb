<section class="bg-white py-8">
  <div class="container mx-auto flex items-center flex-wrap pt-4 pb-12">
    <% @products.each do |product| %>
      <div class="w-full md:w-1/3 xl:w-1/4 p-6 flex flex-col items-center text-center border-solid border-4 border-light-blue-500 m-1">
        <div class="pt-3 flex items-center text-center justify-between">
          <div style="padding-top: 0.1em; padding-bottom: 0.1rem" class="text-sm mb-3 px-3 text-center bg-gray-200 text-gray-800 rounded-full"><%= product.name %></div>
        </div>
        <%= image_tag product.image, class:"hover:grow hover:shadow-lg" %>
        <p class="mt-3"><%= product.description %></p>
        <p><%= (product.price).to_f %> Ден</p>
        <%= link_to "Нарачај", new_product_order_path(product, @order), class:"bg-transparent hover:bg-black text-grey-dark font-semibold hover:text-white py-2 px-4 border border-grey hover:border-transparent rounded mr-2" %>
      </div>
    <% end %>
  </div>
  <%== pagy_nav(@pagy) %>
</section>
