<div class="relative py-3 sm:max-w-xl sm:mx-auto">
  <div class="relative px-4 py-10 bg-white mx-8 md:mx-0 shadow rounded-3xl sm:p-10">
    <div class="max-w-md mx-auto">
      <div class="divide-y divide-gray-200">
        <div class="py-8 text-base leading-6 space-y-4 text-gray-700 sm:text-lg sm:leading-7">
          <%= form_with url: admin_products_new_path, local: true do |f| %>
            <div class="flex flex-col">
              <%= f.label :name, class:"leading-loose" %>
              <%= f.text_field :name, class:"px-4 py-2 border focus:ring-gray-500 focus:border-gray-900 w-full sm:text-sm border-gray-300 rounded-md focus:outline-none text-gray-600" %>
            </div>
            <div class="flex flex-col">
              <%= f.label "Категорија", class:"leading-loose" %>
              <%= f.select :category_id, options_from_collection_for_select(select_category, 'id', 'name') %>
            </div>
            <div class="flex flex-col">
              <%= f.label :image %>
              <%= f.file_field :image, class:"mb-4" %>
            </div>
            <%= f.submit "Креирај Продукт", class:"bg-blue-500 flex justify-center items-center w-full text-white px-4 py-3 rounded-md focus:outline-none" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>