<section class="bg-white py-8">
  <div class="container mx-auto flex items-center flex-wrap pt-4 pb-12">
    <% @category.products.each do |product| %>
        <div class="w-full md:w-1/3 xl:w-1/4 p-6 flex flex-col items-center text-center border-solid border-4 border-light-blue-500 m-1">
          <div class="pt-3 flex items-center text-center justify-between">
            <p class="inline-flex justify-center py-2 px-4 border border-transparent mb-3 shadow-sm text-sm font-medium rounded-md text-white bg-blue-500 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"> <%= product.name %> </p>
          </div>
          <%= image_tag product.image, class:"hover:grow hover:shadow-lg" %>
          <p class="mt-3"><%= product.description %></p>
          <p><%= product.price %></p>
          <%= link_to new_product_order_path(product, @order), class:"flex bg-blue-500 rounded-full font-bold text-white px-4 py-3 transition duration-300 ease-in-out hover:bg-blue-600 mr-6" do %>
                         Нарачај
           <svg xmlns="http://www.w3.org/2000/svg" class="inline ml-2 w-6 stroke-current text-white stroke-2" viewBox="0 0 24 24" fill="none" stroke-linecap="round" stroke-linejoin="round"><line x1="5" y1="12" x2="19" y2="12"/><polyline points="12 5 19 12 12 19"/></svg>
          <% end %>
        </div>
      <% end %>
    </div>
  </section>
