<section class="bg-white py-8">
  <div class="container mx-auto flex items-center flex-wrap pt-4 pb-12">
    <% @category.products.each do |product| %>
        <div class="w-full md:w-1/3 xl:w-1/4 p-6 flex flex-col items-center text-center border-solid border-4 border-light-blue-500 m-1">
          <div class="pt-3 flex items-center text-center justify-between">
            <p class="inline-flex justify-center py-2 px-4 border border-transparent mb-3 shadow-sm text-sm font-medium rounded-md text-white bg-green-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"> <%= product.name %> </p>
          </div>
          <%= image_tag product.image, class:"hover:grow hover:shadow-lg" %>
          <p class="mt-3"><%= product.description %></p>
          <p><%= product.price %></p>
        </div>
      <% end %>
    </div>
  </section>
